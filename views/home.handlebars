<section class="section-content bg padding-y">
    <div class="container">

        {{#each articles}}
        <article class="card card-product-list">
            <div class="row no-gutters">
                <aside class="col-md-3">
                    <a href="#" class="img-wrap">
                        {{!-- <span class="badge badge-danger"> NEW </span> --}}
                        <img src="{{pictures.[1]}}"> 
                    </a>
                </aside> <!-- col.// -->
                <div class="col-md-6">
                    <div class="info-main">
                        <a href="#" class="h5 title"> {{this.title}} </a>

                        <p> {{ description }} </p>
                    </div> <!-- info-main.// -->
                </div> <!-- col.// -->
                <aside class="col-sm-3">
                    <div class="info-aside">
                        <div class="price-wrap">
                            <span class="price h5"> {{ price }} </span>
                        </div> <!-- info-price-detail // -->

                        <br>
                        <p>
                            <a href="#" class="btn btn-primary btn-block"> Details </a>
                            <a href="#" class="btn btn-light btn-block"> Send message </a>
                        </p>
                    </div> <!-- info-aside.// -->
                </aside> <!-- col.// -->
            </div> <!-- row.// -->
        </article>
        {{/each}}

    </div> <!-- container .//  -->
</section>