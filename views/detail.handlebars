{{#with article}}
<article class="card">

  <div class="row no-gutters">
    <aside class="col-md-6">
      <article class="gallery-wrap">
        <div id="carousel1_indicator" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            {{#each pictures}}
              {{#if @first}}<li data-target="#carousel1_indicator" data-slide-to="{{@index}}" class="active"></li>{{/if}}
              {{#unless @first}}<li data-target="#carousel1_indicator" data-slide-to="{{@index}}"></li>{{/unless}}
            {{/each}}
          </ol>

          <div class="carousel-inner">
            {{#each pictures}}
            {{#if @first}}<div class="carousel-item active">{{/if}}
              {{#unless @first}}<div class="carousel-item">{{/unless}}
                <img class="d-block w-100" src="{{this}}" alt="{{this}}">
              </div>
              {{/each}}
            </div>
            <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

      </article> <!-- gallery-wrap .end// -->
    </aside>
    <main class="col-md-6 border-left">
      <article class="content-body">

        <h2 class="title"> {{title}}</h2>
        {{#with meta}}
        <div class="rating-wrap my-3">
          <small class="label-rating text-muted"> {{reviews}} reviews</small>
          <small class="label-rating text-success"> <i class="fa fa-clipboard-check"></i> {{orders}} orders </small>
        </div> <!-- rating-wrap.// -->
        {{/with}}
        <div class="mb-3">
          <var class="price h4">â‚¬ {{price}} </var>
        </div> <!-- price-detail-wrap .// -->

        <p> {{description}} </p>
      </article> <!-- product-info-aside .// -->
    </main> <!-- col.// -->
  </div> <!-- row.// -->

</article>
{{/with}}